@using System.Security.Claims

@model AdventureBook.Models.ViewModels.UserProfileViewModel

@{
    ViewData["MyAccount"] = "MyAccount";
}
<div class="container pt-5">
    <h1>@Model.Profile.Name</h1>
    <p>@Model.Profile.Email</p>
    <p>You&acute;ve posted @Model.Adventures.Count adventures!</p>

    <div class="container pt-2">
        <div class="row">
        @foreach (var item in Model.Adventures)
        {
            <div class="card-body">
                <hr style="height:2px;border-width:0;color:gray;background-color:gray" />
                <div class="card-body">
                    <p class="card-subtitle mb-2 text-muted">
                        @Html.DisplayFor(modelItem => item.UserProfile.Name)
                    </p>
                    <h1 class="card-title">
                        @Html.DisplayFor(modelItem => item.Title)
                    </h1>
                    <p>
                        @Html.DisplayFor(modelItem => item.Text)
                    </p>

                    @{
                        var stars = Enumerable.Range(1, 5);
                        foreach (var star in stars)
                        {
                            var starSpan = (item.Difficulty >= star) ? "<span>★</span>" : "<span>☆</span>";
                            @Html.Raw(starSpan);
                        }
                    }

                    
                    <div>
                        @foreach (var tag in item.Tags)
                        {
                            <img height="35" src="~/images/@(tag.Name).png" title="@tag.Name" />
                            <span>&nbsp;&nbsp;&nbsp;</span>
                        }
                    </div>
                    <hr />
                    <p class="text-muted">
                        @Html.DisplayFor(modelItem => item.DateTime)
                    </p>
                    <div>
                        @*<a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-primary mx-1" title="View">
                                <i class="fas fa-eye"></i>
                            </a>*@
                        @{
                            var currentUserProfileId = int.Parse(User.FindFirst(ClaimTypes.NameIdentifier).Value);
                            if (item.UserProfileId == currentUserProfileId)
                            {
                                <a asp-action="Edit" asp-route-id="@item.Id" asp-route-nextPage="~/Adventure" class="btn btn-secondary btn-sm">
                                    Edit
                                </a>
                                <button class="btn btn-secondary btn-sm" data-toggle="dropdown" type="button" aria- aria-haspopup="true" aria-expanded="false">
                                    Delete
                                </button>
                                <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger mx-1">
                                        <i class="fas fa-trash">You sure?</i>
                                    </a>
                                </div>
                            }
                        }
                    </div>
                </div>
            </div>
        }

    </div>
</div>
</div>