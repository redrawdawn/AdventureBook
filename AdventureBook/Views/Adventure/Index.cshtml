@using System.Security.Claims

@model AdventureBook.Models.ViewModels.AdventuresViewModel

@{
    ViewData["Title"] = "Index";
}
<div class="container pt-5">
    <p>
        <a class="btn btn-secondary" asp-action="Create">➕</a>
    </p>
    <table class="table table-striped">
        <tbody>
            @foreach (var item in Model.Adventures)
            {
            <div class="card-body">
                <hr style="height:2px;border-width:0;color:gray;background-color:gray" />
                <div class="card-body">
                    <p class="card-subtitle mb-2 text-muted">
                        @Html.DisplayFor(modelItem => item.UserProfile.Name)
                    </p>
                    <h1 class="card-title">
                        @Html.DisplayFor(modelItem => item.Title)
                    </h1>
                    <p>
                        @Html.DisplayFor(modelItem => item.Text)
                    </p>
                    @*<p>
                        @Html.DisplayFor(modelItem => item.Difficulty)
                    </p>*@
                    <div>
                        @foreach (var tag in item.Tags)
                        {
                            @Html.DisplayFor(_ => tag.Name)
                        }
                    </div>
                    <hr />
                    <p class="text-muted">
                        @Html.DisplayFor(modelItem => item.DateTime)
                    </p>
                    <div>
                        @*<a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-primary mx-1" title="View">
                <i class="fas fa-eye"></i>
            </a>*@
                        @{
                            var currentUserProfileId = int.Parse(User.FindFirst(ClaimTypes.NameIdentifier).Value);
                            if (item.UserProfileId == currentUserProfileId)
                            {
                                <a asp-action="Edit" asp-route-id="@item.Id" asp-route-nextPage="~/Adventure" class="btn btn-secondary btn-sm">
                                    Edit
                                </a>
                                <button class="btn btn-secondary btn-sm" data-toggle="dropdown" type="button" aria- aria-haspopup="true" aria-expanded="false">
                                    Delete
                                </button>
                                <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger mx-1">
                                        <i class="fas fa-trash">You sure?</i>
                                    </a>
                                </div>
                            }
                        }
                    </div>
                </div>
            </div>
}
            </tbody>
            </table>
            </div>