@model AdventureBook.Models.ViewModels.AdventuresViewModel

@{
    ViewData["Title"] = "Index";
}
<div class="container pt-5">
    <h1>Adventures</h1>

    <p>
        <a class="btn btn-primary" asp-action="Create">New Adventure</a>
    </p>
    <table class="table table-striped">
        <tbody>
            @foreach (var item in Model.Adventures )
            {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.UserProfile.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Text)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Difficulty)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DateTime)
                </td>
                <td>
                    @foreach (var tag in item.Tags)
                    {
                        @Html.DisplayFor(_ => tag.Name)
                    }
                </td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-primary mx-1" title="View">
                        <i class="fas fa-eye"></i>
                    </a>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-primary mx-1" title="Edit">
                        <i class="fas fa-pencil-alt"></i>
                    </a>
                    <button class="btn btn-secondary btn-sm" data-toggle="dropdown" type="button" data-toggle="dropdown" aria- aria-haspopup="true" aria-expanded="false">
                        Delete
                    </button>
                    <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger mx-1">
                            <i class="fas fa-trash">You sure?</i>
                        </a>
                    </div>
                </td>
            </tr>
            }
        </tbody>
    </table>
</div>